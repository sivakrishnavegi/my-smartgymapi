{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@academics/*": [
        "src/modules/academics/*"
      ],
      "@ai/*": [
        "src/modules/ai/*"
      ],
      "@operational/*": [
        "src/modules/operational/*"
      ],
      "@collaboration/*": [
        "src/modules/collaboration/*"
      ],
      "@iam/*": [
        "src/modules/iam/*"
      ],
      "@shared/*": [
        "*"
      ]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}